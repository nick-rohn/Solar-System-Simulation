{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-pthread",
                "-I", "${workspaceFolder}",
                "-o", "${workspaceFolder}/main",
                "${workspaceFolder}/source/*.cc"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}